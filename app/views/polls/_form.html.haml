= form_for(@poll) do |f|
  - if @poll.errors.any?
    #error_explanation
      %h2= pluralize(@poll.errors.count, "error") 
      Prohibited this poll from being saved:

      %ul
      - @poll.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.label :type
    %br
    = f.text_field :type
  .field
    = f.label :question
    %br
    = f.text_field :question
  .actions
    = f.submit
