- provide(:title, "Sign In")

.row
  .span5
  .span7
    #form
      = form_for(:session, url: sessions_path, html: {class: "form-signin"} ) do |f|

        %h2.form-signin.heading
          Sign In
        
        %br
        = f.text_field :email, autofocus: "autofocus", placeholder: "Email Address"

        %br
        %br
        = f.password_field :password, placeholder: "Password"

        %br
        %br
        %button.btn.bth-large.btn-primary{ type: "submit" } Sign In

    #newUser
      New user? 
      %br
      %br
      %button.btn.btn-large.btn-primary= link_to "Sign up now!", signup_path
