.row
  .span12
    %h2
      Welcome to ResponseMonster
    %br
    - open_surveys = false
    - @enrolled.each do |course|
      - course.surveys.each do |survey|
        - open_surveys = survey.is_active? || open_surveys
    - @taught.each do |course|
      - course.surveys.each do |survey|
        - open_surveys = survey.is_active? || open_surveys
    - if open_surveys
      %h3 Open surveys in your classes
      %table.table.table-hover.table-condensed.wide
        %thead
          %tr
            %th Class
            %th Survey
            %th Closes
            %th Action
        %tbody
          - if !@taught.empty?
            - @taught.each do |course|
              - course.surveys.each do |survey|
                - if survey.is_active?
                  %tr
                    %td= link_to course.name, course
                    %td= survey.name
                    - if survey.end_time.nil?
                      %td Unknown
                    - else
                      %td= survey.end_time
                    %td
                      = link_to "Close quiz", deactivate_course_survey_path(course, survey), class: "btn pill-button-right pill-button-fix"
                      = link_to "View Quiz", course_survey_path(course, survey), class: "btn pill-button-middle"
                      = link_to "See Responses", grade_course_survey_path(course, survey), class: "btn pill-button-left pill-button-fix-right"
          - if !@enrolled.nil?
            - @enrolled.each do |course|
              - course.surveys.each do |survey|
                - if survey.is_active?
                  %tr
                    %td= link_to course.name, course_path(course)
                    %td= survey.name
                    - if survey.end_time.nil?
                      %td Unknown
                    - else
                      %td=  survey.end_time
                    %td
                      = link_to "Take", login_course_survey_path(course, survey), class: "btn"
.row
  .span6
    - if !@enrolled.empty? || @taught.empty?
      %td.half-cell
        %h3 Enrolled Classes
        %table.table.table-hover.table-condensed
          %thead
            %tr
              %th Name
              %th Title
              %th Section
              %th Term
              %th Teacher
              - if is_admin?
                %th
                  Edit
          %tbody
            - @enrolled.each do |course|
              %tr
                %td=link_to course.name, course
                %td=course.title
                %td=course.section
                %td
                  - if Date.new(Date.today.year, 8, 1)
                    Fall
                  - else
                    Spring
                %td= "#{User.find_by_id(course.teacher_id).first_name} #{User.find_by_id(course.teacher_id).last_name}"
                - if is_admin?
                  %td
                    = link_to "Edit", edit_course_path(course), class: "btn"
  .span6
    - if !@taught.empty?
      %td.half-cell
        %h3 Classes you teach
        %table.table.table-hover.table-condensed
          %thead
            %tr
              %th Name
              %th Title
              %th Section
              %th Term
              %th Students
              - if is_admin?
                %th
                  Edit
          %tbody
            - @taught.each do |course|
              - if course.teacher_id == current_user.id
                %tr
                  %td=link_to course.name, course
                  %td=course.title
                  %td=course.section
                  %td
                    - if Date.new(Date.today.year, 8, 1)
                      Fall
                    - else
                      Spring
                  %td=course.users.count
                  - if is_admin?
                    %td
                      = link_to "Edit", edit_course_path(course), class: "btn"
.row
  .span12
    .btn-toolbar
      - if is_admin?
        = link_to "Create Course", new_course_path, class: "btn"
      = link_to "Enroll/Drop Classes", courses_path, class: "btn"
