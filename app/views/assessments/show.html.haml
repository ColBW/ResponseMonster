%h2
  = @survey.name

%h3
  Summary

%h4
  Your Score:
  = "#{@assessment.score} / #{@survey.total_points}"

%h3
  Questions

- @survey.polls.each do |poll|
  %h4
    = poll.question_text
  %br
  .well
    %ul
    - poll.answers.each do |answer|
      - @is_choice = false
      - @assessment.responses.each do |response|
        - if answer.id == response.choiceId
          - @is_choice = true
      - if @is_choice && answer.is_right?
        %li.alert.alert-success= answer.answer_text
      - elsif @is_choice && !answer.is_right?
        %li.alert.alert-warning= answer.answer_text
      - else
        %li.alert.alert-info= answer.answer_text

