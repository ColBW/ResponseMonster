= nested_form_for([:course, @survey]) do |f|
  - if @survey.errors.any?
    .error_explanation
      %h2
        = pluralize(@survey.errors.count, "error")
        prohibited this survey from being saved:
      %ul
      - @survey.errors.full_messages.each do |msg|
        %li
          = msg

  .field
    = f.label :name
    %br
    = f.text_field :name, autofocus: "autofocus"

  .well
    = f.fields_for :polls do |polls_form|
      %h2 Question
      .well
        = polls_form.label :question_text
        = polls_form.text_field :question_text
        = polls_form.label :answer_type
        = polls_form.select :answer_type, "<option>Multiple Choice</option><option>Short Answer</option><option>Code</option><option>Essay</option>".html_safe
        = f.fields_for :answers do |answers_form|
          %h2 Answer
          .well
            = answers_form.label :answer_text
            = answers_form.text_field :answer_text
        .btn= polls_form.link_to_remove "Remove"
    = f.link_to_add "Add Question", :polls

  %br

  .actions
    = f.submit
